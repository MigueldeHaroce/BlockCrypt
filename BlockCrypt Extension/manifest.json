{
    "manifest_version": 3,
    "name": "BlockCrypt",
    "version": "1.0",
    "description": "A Chrome extension to interact with a blockchain smart contract.",
    
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "http://*/*",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    }
}